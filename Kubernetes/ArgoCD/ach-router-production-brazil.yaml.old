apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ach-router-production-brazil
  annotations:
    argo.octopus.com/project: "ach-router"
    argo.octopus.com/environment: "production"
    argo.octopus.com/tenant: "brazil"
spec:
  project: default
  source:
     repoURL: https://github.com/OctopusSolutionsEngineering/ghu-ach-router.git
     targetRevision: HEAD
     path: Kubernetes/Manifests/production-brazil
  destination:
    server: https://kubernetes.default.svc
    namespace: production-brazil
  syncPolicy:
    automated:  
      prune: true
      selfHeal: true
    syncOptions:
    - Validate=false
    - CreateNamespace=true